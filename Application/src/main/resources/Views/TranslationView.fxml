                                    <Font name="System Bold" size="16.0" />
                                </font>
                            </Label>
                            <Button fx:id="switchToggle" layoutX="302.0" layoutY="15.0" mnemonicParsing="false" onAction="#handleOnClickSwitchToggle" prefWidth="41.0" styleClass="switch-button" stylesheets="@../Utils/style.css">
                                <graphic>
                                    <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../Utils/icons/exchange.png" />
