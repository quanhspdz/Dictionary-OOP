                            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../Utils/icons/cancle.png" />
                                </image>
                            </ImageView>
                        </graphic>
                        <tooltip>
                            <Tooltip text="Clear" />
                        </tooltip>
                    </Button>
                </children>
            </Pane>
              <Button fx:id="translateBtn" layoutX="335.0" layoutY="352.0" mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" styleClass="trans-button" stylesheets="@../Utils/style.css" text="Dịch">
                    </Button>
        </children>
    </AnchorPane>
      <Pane layoutY="2.0" prefHeight="57.0" prefWidth="774.0" styleClass="title" stylesheets="@../Utils/style.css">
